@model ArticleViewModel

<div class="row">
    <div class="col-md-5">
        <h1 class="bg-dark text-light p-2">Edit article: <strong>@Model.Name</strong></h1>
        <h4 class="mb-2">Client: @Model.ClientName</h4>
        <hr />
        <a class="btn btn-warning btn-sm text-primary" asp-action="Select" asp-controller="Article" asp-route-clientId="@Model.ClientId" asp-route-articleId="@Model.Id">Change Material or Color model</a>
        <form method="post" asp-action="Edit" asp-controller="Article" enctype="multipart/form-data">
            <input type="hidden" asp-for="@Model.DesignName" />
            <input type="hidden" asp-for="@Model.Id" />

            <partial name="_ArticlePartial" model="@Model" />
            <button type="submit" class="w-100 btn btn-lg btn-primary mt-3">Save changes</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
