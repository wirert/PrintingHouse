@model List<AddArticleColorVeiwModel>

<div class="col-4">
    <h1>Add recipe for article: @Model.First().ArticleName</h1>
    <p>Client: @Model.First().ClientName</p>


    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <form asp-controller="Article" asp-action="AddColors" method="post">
        <ul>
            @for (int i = 0; i < Model.Count; i++)
            {
                <li>
                    <input type="hidden" asp-for="@Model[i].ArticleName" />
                    <input type="hidden" asp-for="@Model[i].ColorName">
                    <input type="hidden" asp-for="@Model[i].ColorModelId">
                    <input type="hidden" asp-for="@Model[i].ColorId">
                    <input type="hidden" asp-for="@Model[i].ClientName">
                    <p class="mt-2">@Model[i].ColorName:</p>
                    <div class="form-floating">
                        <input asp-for="@Model[i].ColorQuantity" class="form-control" type="number" step="0.01" min="0" />
                        <label asp-for="@Model[i].ColorQuantity">Required @Model[i].ColorName:</label>
                        <span asp-validation-for="@Model[i].ColorQuantity" class="text-danger"></span>
                    </div>
                </li>
            }
        </ul>
        <button type="submit" class="w-100 btn btn-lg btn-primary mt-3">Save</button>
    </form>


</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
