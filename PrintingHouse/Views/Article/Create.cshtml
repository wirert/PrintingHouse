@model ArticleViewModel

@{
    ViewData["Title"] = "Create new article";
}

<div class="row">
    <div class="col-md-5">
        <h1>@ViewData["Title"]</h1>
        <h4 class="mb-2">Client: @Model.ClientName</h4>
        <hr />
        <h3>Material: @Model.MaterialName</h3>
        <a class="btn btn-warning btn-sm text-primary" asp-action="Select" asp-controller="Article" asp-route-clientId="@Model.ClientId">Change Material</a>
        <form method="post" asp-action="Create" asp-controller="Article" enctype="multipart/form-data">
            <partial name="_ArticlePartial" model="@Model" />
            <button type="submit" class="w-100 btn btn-lg btn-primary mt-3">Create</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}