@model IEnumerable<AllArticleViewModel>


<h1>@ViewBag.Title</h1>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Client name</th>
            <th scope="col">Material</th>
            <th scope="col">Color model</th>
            <th scope="col">Design file</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var article in Model)
        {
            <tr>
                <td>@article.Name</td>
                <td>@article.ClientName</td>
                <td>
                    @article.Material
                </td>
                <td>@article.ColorModel</td>
                <td>@article.ImageName</td>
                <td>
                    <form asp-controller="Article" asp-action="Edit" method="get">
                        <input name="id" type="hidden" value="@article.Id" />
                        <button class="btn btn-warning" type="submit">Edit</button>
                    </form>
                </td>
                <td>
                </td>
            </tr>
        }

    </tbody>
</table>

<a asp-asp-area="Admin" asp-controller="Employee" asp-action="Add" class="btn btn-dark">Add new employee</a>