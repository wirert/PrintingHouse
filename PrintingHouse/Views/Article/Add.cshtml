@model AddArticleViewModel

@{
    ViewData["Title"] = "Add new article";
}

<div class="row">
    <h1>@ViewData["Title"]</h1>
    <div class="col-md-4">
        <form method="post" asp-action="Add" asp-controller="Article" enctype="multipart/form-data">
            <input type="hidden" asp-for="@Model.ClientId" />
            <input type="hidden" asp-for="@Model.ClientName" />
            <h4>Client: @Model.ClientName</h4>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="@Model.Name" class="form-control" autocomplete="name" aria-required="true" />
                <label asp-for="@Model.Name">Article name:</label>
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>

            <div class="row form-group">
                <div class="col-md-2">
                    <label asp-for="MaterialId" class="control-label"></label>
                </div>
                <div class="col-md-4">
                    <select asp-for="MaterialId" class="form-control"
                            asp-items="ViewBag.MaterialsData"
                            id="MaterialId" onchange="loadColorModel(this)"></select>
                    <span asp-validation-for="MaterialId" class="text-danger"></span>
                </div>
                <div class="col-md-2">
                    <label asp-for="@Model.ColorModelId" class="control-label"></label>
                </div>
                <div class="col-md-4">
                    <select asp-for="ColorModelId" class="form-control" 
                    asp-items="ViewBag.ColorModelsData" 
                    id="ddlColorModelId"></select>
                    <span asp-validation-for="ColorModelId" class="text-danger"></span>
                </div>
            </div>

            <div class="form-floating">
                <input asp-for="@Model.MaterialQuantity" class="form-control" aria-required="true" type="number" step="0.1" min="0" />
                <label asp-for="@Model.MaterialQuantity">Required material quantity:</label>
                <span asp-validation-for="@Model.MaterialQuantity" class="text-danger"></span>
            </div>     
            <div class="mb-3">
                <label asp-for="@Model.DesignFile" class="form-label">Upload design file</label>
                <input asp-for="@Model.DesignFile" class="form-control form-control" type="file">
                <span asp-validation-for="@Model.DesignFile" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary mt-3">Submit</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script type="text/javascript">
        $(document).ready(function () {
            var a = 0;
        });
        function loadColorModel(obj) {
            var value = obj.value;
            var url = "/Article/GetColorModelByMaterialId";
            $.post(url, { MaterialId: value }, function (data) {
                debugger;
                PopulateDropDown("#ddlColorModelId", data);
            });
        }
        function PopulateDropDown(dropDownId, list, selectedId) {
            $(dropDownId).empty();
            $(dropDownId).append("<option>--Select Color model--</option>")
            $.each(list, function (index, row) {
                $(dropDownId).append("<option value='" + row.id + "'>" + row.name + "</option>")
            });
        }
    </script>
}

