<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"] - PrintingHouse</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/toastr/toastr.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PrintingHouse.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
</head>
<body>
    <partial name="_UserMessages" />
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark text-light box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-opacity-50 text-danger me-3" asp-area="" asp-controller="Home" asp-action="Index">PrintingHouse</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">                        
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-info" asp-area="" asp-controller="Client" asp-action="All">CLIENTS</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-info" asp-area="" asp-controller="Article" asp-action="All">ARTICLES</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-info" asp-area="" asp-controller="Order" asp-action="All">ORDERS</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-info" asp-area="" asp-controller="Machine" asp-action="Index">MACHINES</a>
                            </li>
                            <li class="nav-item ms-4">
                                <a class="nav-link text-info" asp-area="" asp-controller="Material" asp-action="Index">MATERIALS</a>
                            </li>
                            <li class="nav-item ms-4">
                                <a class="nav-link text-info" asp-area="" asp-controller="Color" asp-action="Index">COLORS</a>
                            </li>
                        }

                        @if (User.IsInRole(AdminRoleName))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-info ms-3" asp-area="Admin" asp-controller="Home" asp-action="Index">ADMIN AREA</a>
                            </li>
                        }
                       
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-dark">
        <div class="container">
            &copy; 2023@(DateTime.Now.Year.ToString() == "2023" ? "" : $" - {DateTime.Now.Year}") PrintingHouse 
        </div>
    </footer>    
    <script src="~/lib/toastr/toastr.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
