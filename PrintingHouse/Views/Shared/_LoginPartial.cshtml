@using Microsoft.AspNetCore.Identity
@using PrintingHouse.Infrastructure.Data.Entities.Account;

@inject SignInManager<ApplicationUser> SignInManager


<ul class="navbar-nav me-2">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item me-2">
            <a class="nav-link text-warning" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                @User.FullName()</a>
        </li>
        @if (User.IsInRole(AdminRoleName))
        {
            <li class="nav-item">
                <a class="nav-link text-info me-2" asp-area="Admin" asp-controller="Home" asp-action="Index">ADMIN AREA</a>
            </li>
        }
        <li class="nav-item">
            <form class="form-inline" asp-controller="Account" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-warning me-2 ">LOG OUT</button>
            </form>
        </li>
        
    }
    else
    {
        <li class="nav-item me-3">
            <a class="nav-link text-warning" asp-action="Login" asp-controller="Account">
                LOG IN</a>
        </li>
        <li class="nav-item me-5">
            <a class="nav-link text-warning text-capitalize" asp-action="Register" asp-controller="Account">
                REGISTER</a>
        </li>       
    }
</ul>
