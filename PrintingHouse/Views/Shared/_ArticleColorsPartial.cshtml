@model IList<AddArticleColorVeiwModel>


<ul class="col-4>
    @for (int i = 0; i < Model.Count; i++)
    {
    <li>
        <p class="mt-2">@Model[i].ColorName:</p>
        <div class="form-floating">
            <input type="hidden" asp-for="@Model[i].ColorName">
            <input type="hidden" asp-for="@Model[i].ColorId">
            <input value="@Model[i].ColorQuantity" name="ColorQuantity" class="form-control" type="number" step="0.01" min="0" />
            <label asp-for="@Model[i].ColorQuantity">Required @Model[i].ColorName:</label>
            <span asp-validation-for="@Model[i].ColorQuantity" class="text-danger"></span>
        </div>
    </li>
    }
</ul>


@section Scripts {
<partial name="_ValidationScriptsPartial" />
}



